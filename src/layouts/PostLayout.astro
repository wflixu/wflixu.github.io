---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter, headings } = Astro.props;
const { content } = Astro.props;
const headers = headings ?? [];
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="content-table">
    <ul>
      {
        headers.map(({ slug, text, depth }) => {
          return (
            <li class={"depth-" + depth}>
              <a href={`#${slug}`}>{text}</a>
            </li>
          );
        })
      }
    </ul>
  </div>
  <article class="post">
    <header>
      <h1>
        {frontmatter.title}
      </h1>
      <div class="meta">
        <span>
          📅 {frontmatter.date.slice(0, 10)}
        </span>
        <span>
          ✍️ {frontmatter.author}
        </span>
      </div>
      <div class="hr"></div>
    </header>
    <div class="content">
      <slot />
    </div>
    <div class="hr"></div>
    <div class="tags">
      {
        frontmatter.tags &&
          frontmatter.tags.map((tag) => (
            <p class="tag">
              <a href={`/tags/${tag}`}>{tag}</a>
            </p>
          ))
      }
    </div>
  </article>
</BaseLayout>

<style>
  a {
    color: #00539f;
  }
  article {
    box-sizing: border-box;
    color: #424242;
    font-size: 18px;
    font-weight: 400;
  }

  article > header {
    word-wrap: break-word;
    overflow: hidden;
  }

  header h1 {
    margin-bottom: 14px;
    font-weight: bolder;
    word-wrap: break-word;
    overflow: hidden;
    color: #212121;
    font-family: lato, sans-serif;
    font-style: normal;
    text-align: center;
    font-size: 36px;
    margin-top: 20px;
  }
  header > .meta {
    display: flex;
    justify-content: center;
  }
  .meta > span {
    padding: 0 16px;
  }
  .hr {
    background-color: #009688;
    height: 2px;
    margin: 10px auto;
  }
  .tags {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }
  .content-table {
    position: fixed;
    right: 0;
    top: 20%;
    background-color: #f8fcfd;
  }

  .content-table ul {
    list-style: none;
    padding: 1em;
    max-width: 24em;
  }
  .content-table ul > li.depth-2 {
    padding-left: 1em;
  }
  .content-table ul > li.depth-3 {
    padding-left: 2em;
  }
  .content-table ul > li.depth-4 {
    padding-left: 3em;
  }
</style>
