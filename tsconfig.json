{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "exclude": ["dist", "node_modules", "public"],
}
